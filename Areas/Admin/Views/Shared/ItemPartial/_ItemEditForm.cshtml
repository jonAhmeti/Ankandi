@model Item
@inject Microsoft.AspNetCore.Mvc.Localization.IViewLocalizer Localizer

<form asp-action="Edit" method="post" class="form-group col">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <input asp-for="Id" hidden />
    <div class="form-group row">
        <!--Item name and start price inputs-->
        <div class="w-auto col col-6">
            <label class="form-control-plaintext">@Localizer["name"]</label>
            <!--input name-->
            <input asp-for="Name" name="Name" placeholder="@Localizer["namePlaceholder"]" type="text" class="form-control" />
        </div>
        <div class="w-auto col col-6">
            <label class="form-control-plaintext">@Localizer["startPrice"]</label>
            <div class="input-group">
                <div class="input-group-prepend">
                    <span class="input-group-text">€</span>
                </div>
                <!--input start price-->
                <input asp-for="StartPrice" name="StartPrice" placeholder="@Localizer["startPricePlaceholder"]" class="form-control" />
            </div>
        </div>
    </div>
    <div class="form-group row">
        <!--Item measurement units and amount-->
        <div class="w-auto col col-6">
            <label class="form-control-plaintext">@Localizer["measurementUnits"]</label>
            <input asp-for="MeasurementUnits" name="MeasurementUnits" placeholder="piece, kg, liter, cm..." class="form-control" />
        </div>
        <div class="w-auto col col-6">
            <label class="form-control-plaintext">@Localizer["amount"]</label>
            <input asp-for="Amount" name="Amount" placeholder="@Localizer["amountPlaceholder"]" class="form-control" />
        </div>
    </div>
    <div class="form-group row">
        <!--Item sold date and price-->
        <div class="col col-6">
            <div class="row">
                <div class="col col-12">
                    <label class="form-control-plaintext">@Localizer["soldDate"]</label>
                    <div class="row">
                        <div class="input-group col col-6 pr-0">
                            <!--input startDate-->
                            <input id="editSoldDate" placeholder="@Localizer["date"]" type="date" class="form-control" />
                        </div>
                        <div class="input-group col col-6">
                            <!--input startTime-->
                            <input id="editSoldTime" placeholder="@Localizer["time"]" type="time" class="form-control" />
                        </div>
                        <!--hidden input startDateTime-->
                        <input asp-for="SoldDate.Value" name="SoldDate" id="editSoldDateTime" hidden />
                        <span class="text-danger"></span>
                    </div>
                </div>
            </div>
        </div>
        <div class="w-auto col col-6">
            <label class="form-control-plaintext">@Localizer["soldPrice"]</label>
            <div class="input-group">
                <div class="input-group-prepend">
                    <span class="input-group-text">€</span>
                </div>
                <!--input sold price-->
                <input asp-for="SoldPrice" name="SoldPrice" id="createSoldPrice" class="form-control" />
            </div>
        </div>
    </div>
    <div class="form-group row">
        <!--Item image and description-->
        <div class="w-auto col col-6">
            <label class="form-control-plaintext">@Localizer["image"]</label>
            <input asp-for="Image" name="Image" placeholder="@Localizer["imagePlaceholder"]" class="form-control" />
        </div>
        <div class="w-auto col col-6">
            <label class="form-control-plaintext">@Localizer["details"]</label>
            <textarea asp-for="Details" name="Details" placeholder="@Localizer["detailsPlaceholder"]" class="form-control" style="min-height: 2.5em"></textarea>
        </div>
    </div>
    <div class="form-group">
        <button type="submit" class="btn btn-primary">@Localizer["edit"]</button>
    </div>
</form>
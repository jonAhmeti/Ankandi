@model Item
    <form asp-action="Edit" method="post" class="form-group col">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <input asp-for="Id" hidden/>
        <div class="form-group row">
            <!--Item name and start price inputs-->
            <div class="w-auto col col-6">
                <label asp-for="Name" class="form-control-plaintext"></label>
                <!--input name-->
                <input asp-for="Name" name="Name" placeholder="Item's name" type="text" class="form-control" />
            </div>
            <div class="w-auto col col-6">
                <label asp-for="StartPrice" class="form-control-plaintext"></label>
                <div class="input-group">
                    <div class="input-group-prepend">
                        <span class="input-group-text">€</span>
                    </div>
                    <!--input start price-->
                    <input asp-for="StartPrice" name="StartPrice" placeholder="Minimum price" class="form-control" />
                </div>
            </div>
        </div>
        <div class="form-group row">
            <!--Item measurement units and amount-->
            <div class="w-auto col col-6">
                <label asp-for="MeasurementUnits" class="form-control-plaintext"></label>
                <input asp-for="MeasurementUnits" name="MeasurementUnits" placeholder="piece, kg, liter, cm..." class="form-control" />
            </div>
            <div class="w-auto col col-6">
                <label asp-for="Amount" class="form-control-plaintext"></label>
                <input asp-for="Amount" name="Amount" placeholder="Amount of item by units" class="form-control" />
            </div>
        </div>
        <div class="form-group row">
            <!--Item sold date and price-->
            <div class="col col-6">
                <div class="row">
                    <div class="col col-12">
                        <label asp-for="SoldDate" class="form-control-plaintext"></label>
                        <div class="row">
                            <div class="input-group col col-6 pr-0">
                                <!--input startDate-->
                                <input id="editSoldDate" placeholder="Date" type="date" class="form-control" />
                            </div>
                            <div class="input-group col col-6">
                                <!--input startTime-->
                                <input id="editSoldTime" placeholder="Time" type="time" class="form-control" />
                            </div>
                            <!--hidden input startDateTime-->
                            <input asp-for="SoldDate.Value" name="SoldDate" id="editSoldDateTime" hidden />
                            <span class="text-danger"></span>
                        </div>
                    </div>
                </div>
            </div>
            <div class="w-auto col col-6">
                <label asp-for="SoldPrice" class="form-control-plaintext">Price sold</label>
                <div class="input-group">
                    <div class="input-group-prepend">
                        <span class="input-group-text">€</span>
                    </div>
                    <!--input sold price-->
                    <input asp-for="SoldPrice" name="SoldPrice" id="createSoldPrice" class="form-control" />
                </div>
            </div>
        </div>
        <div class="form-group row">
            <!--Item image and description-->
            <div class="w-auto col col-6">
                <label asp-for="Image" class="form-control-plaintext">Image</label>
                <input asp-for="Image" name="Image" placeholder="URI of the image" class="form-control" />
            </div>
            <div class="w-auto col col-6">
                <label asp-for="Details" class="form-control-plaintext">Details</label>
                <textarea asp-for="Details" name="Details" placeholder="Descripiton of the item" class="form-control" style="min-height: 2.5em"></textarea>
            </div>
        </div>
        <div class="form-group">
            <button type="submit" class="btn btn-primary">Edit</button>
        </div>
    </form>
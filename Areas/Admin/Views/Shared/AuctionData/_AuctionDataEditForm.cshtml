@model AuctionData

<form asp-action="Edit" method="post" class="form-group">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="form-group">
        <input hidden asp-for="Id"/>
        <label asp-for="StartDate" class="form-control-plaintext"></label>
        <div class="d-flex justify-content-between">
            <div class="input-group w-auto">
                <div class="input-group-prepend">
                    <span class="input-group-text">Date</span>
                </div>
                <input asp-for="StartDate.Date" type="date" class="form-control"/>
            </div>
            <div class="input-group  w-auto">
                <div class="input-group-prepend">
                    <span class="input-group-text">Time</span>
                </div>
                <input asp-for="StartDate.TimeOfDay" id="startTime" type="time" class="form-control"/>
            </div>
        </div>
        <input name="StartDate" id="startDateTime" hidden/>
        <span class="text-danger"></span>
    </div>
    <div class="form-group">
        <label class="form-control-plaintext">End date</label>
        <div class="d-flex justify-content-between">
            <div class="input-group w-auto">
                <div class="input-group-prepend">
                    <span class="input-group-text">Date</span>
                </div>
                <input asp-for="EndDate.Date" type="date" class="form-control" />
            </div>
            <div class="input-group w-auto">
                <div class="input-group-prepend">
                    <span class="input-group-text">Time</span>
                </div>
                <input asp-for="StartDate.TimeOfDay" type="time" class="form-control" />
            </div>
        </div>
        <input name="endDate" id="endDateTime" hidden />
        <span class="text-danger"></span>
    </div>
    <div class="form-group">
        <button type="submit" class="btn btn-primary">Edit</button>
    </div>
</form>
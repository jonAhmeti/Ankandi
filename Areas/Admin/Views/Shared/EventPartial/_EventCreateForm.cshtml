@model Event

    <form asp-action="Create" method="post" class="form-group col">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group row">
            <label class="col col-12">Start Date</label>
            <div class="col col-7">
                <div class="input-group w-auto">
                    <div class="input-group-prepend">
                        <span class="input-group-text">Date</span>
                    </div>
                    <!--input startDate-->
                    <input id="createStartDate" type="date" class="form-control" />
                </div>
            </div>
            <div class="col col-5">
                <div class="input-group  w-auto">
                    <div class="input-group-prepend">
                        <span class="input-group-text">Time</span>
                    </div>
                    <!--input startTime-->
                    <input id="createStartTime" type="time" class="form-control" />
                </div>
            </div>
            <input hidden name="StartDate" id="createStartDateTime"/>
        </div>
        <div class="form-group row">
            <label class="col col-12">End Date</label>
            <div class="col col-7">
                <div class="input-group w-auto">
                    <div class="input-group-prepend">
                        <span class="input-group-text">Date</span>
                    </div>
                    <!--input startDate-->
                    <input id="createEndDate" type="date" class="form-control" />
                </div>
            </div>
            <div class="col col-5">
                <div class="input-group  w-auto">
                    <div class="input-group-prepend">
                        <span class="input-group-text">Time</span>
                    </div>
                    <!--input startTime-->
                    <input id="createEndTime" type="time" class="form-control" />
                </div>
            </div>
            <input hidden name="EndDate" id="createEndDateTime"/>
        </div>
        <div class="form-group row">
            <!--Event AuctionId and ItemId inputs-->
            <div class="w-auto col col-6">
                <label class="form-control-plaintext">Auction id</label>
                <input name="AuctionId" class="form-control" />
            </div>
            <div class="w-auto col col-6">
                <label class="form-control-plaintext">Item id</label>
                <input name="ItemId" placeholder="Item being sold" class="form-control" />
            </div>
        </div>
        <div class="form-group row">
            <!--Event current price and minimum price increment amount inputs-->
            <div class="w-auto col col-6">
                <label class="form-control-plaintext">Min price increment by</label>
                <!--input sold price-->
                <input name="MinPriceIncrementAmount" class="form-control" />
            </div>
            <div class="w-auto col col-6">
                <label class="form-control-plaintext">Price sold</label>
                <div class="input-group">
                    <div class="input-group-prepend">
                        <span class="input-group-text">€</span>
                    </div>
                    <!--input sold price-->
                    <input name="SoldPrice" id="createSoldPrice" class="form-control" />
                </div>
            </div>
        </div>
        <div class="form-group row">
            <!--Top bidder input-->
            <div class="w-auto col col-12">
                <label class="form-control-plaintext">Top bidder id</label>
                <input placeholder="make dropdown with winner's id" class="form-control" />
            </div>
        </div>
        <div class="form-group">
            <button type="submit" class="btn btn-primary">Create</button>
        </div>
    </form>
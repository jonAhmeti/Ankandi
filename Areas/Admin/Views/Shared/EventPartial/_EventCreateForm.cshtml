@using System.Collections
@model Event
@inject Microsoft.AspNetCore.Mvc.Localization.IViewLocalizer Localizer

<form asp-action="Create" method="post" class="form-group col">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="form-group row">
        <label class="col col-12">@Localizer["startDate"]</label>
        <div class="col col-7">
            <div class="input-group w-auto">
                <div class="input-group-prepend">
                    <span class="input-group-text">@Localizer["date"]</span>
                </div>
                <!--input startDate-->
                <input id="createStartDate" type="date" class="form-control" />
            </div>
        </div>
        <div class="col col-5">
            <div class="input-group  w-auto">
                <div class="input-group-prepend">
                    <span class="input-group-text">@Localizer["time"]</span>
                </div>
                <!--input startTime-->
                <input id="createStartTime" type="time" class="form-control" />
            </div>
        </div>
        <input hidden name="StartDate" id="createStartDateTime" />
    </div>
    <div class="form-group row">
        <label class="col col-12">@Localizer["endDate"]</label>
        <div class="col col-7">
            <div class="input-group w-auto">
                <div class="input-group-prepend">
                    <span class="input-group-text">@Localizer["date"]</span>
                </div>
                <!--input startDate-->
                <input id="createEndDate" type="date" class="form-control" />
            </div>
        </div>
        <div class="col col-5">
            <div class="input-group  w-auto">
                <div class="input-group-prepend">
                    <span class="input-group-text">@Localizer["time"]</span>
                </div>
                <!--input startTime-->
                <input id="createEndTime" type="time" class="form-control" />
            </div>
        </div>
        <input hidden name="EndDate" id="createEndDateTime" />
    </div>
    <div class="form-group row">
        <!--Event AuctionId and ItemId inputs-->
        <div class="w-auto col col-6">
            <label class="form-control-plaintext">@Localizer["auctionId"]</label>
            <select class="form-control dropdown" asp-for="AuctionId"
                    asp-items="@(new SelectList((IEnumerable)ViewData["Auctions"],"Id","Id"))">
                <option value="" selected disabled hidden>@Localizer["dropdownSelect"]</option>
            </select>
        </div>
        <div class="w-auto col col-6">
            <label class="form-control-plaintext">@Localizer["itemId"]</label>
            <select class="form-control dropdown" asp-for="ItemId"
                    asp-items="@(new SelectList((IEnumerable)ViewData["Items"],"Id","Name"))">
                <option value="" selected disabled hidden>@Localizer["dropdownSelect"]</option>
            </select>
        </div>
    </div>
    <div class="form-group row">
        <!--Event current price and minimum price increment amount inputs-->
        <div class="w-auto col col-6">
            <label class="form-control-plaintext">@Localizer["minPriceLabel"]</label>
            <!--input sold price-->
            <input name="MinPriceIncrementAmount" class="form-control" />
        </div>
        <div class="w-auto col col-6">
            <label class="form-control-plaintext">@Localizer["currentPrice"]</label>
            <div class="input-group">
                <div class="input-group-prepend">
                    <span class="input-group-text">€</span>
                </div>
                <!--input sold price-->
                <input name="CurrentPrice" class="form-control" />
            </div>
        </div>
    </div>
    <div class="form-group row">
        <!--Top bidder input-->
        <div class="w-auto col col-12">
            <label class="form-control-plaintext">@Localizer["topBidderId"]</label>
            <input placeholder="make dropdown with winner's id" class="form-control" />
        </div>
    </div>
    <div class="form-group">
        <button type="submit" class="btn btn-primary">@Localizer["create"]</button>
    </div>
</form>
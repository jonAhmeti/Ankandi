@model Item
@{
    ViewData["Title"] = "Details";
}
<link rel="stylesheet" href="~/css/Bidder/Details/index.css"/>
<div class="w-100 h-100" id="Details">
    <div class="aboveDetails d-flex py-5">
        <a asp-controller="Home" asp-action="Index" class="badge-pill text-decoration-none py-2">
            Back to home page
        </a>
    </div>
    <div class="container-fluid">
        <div class="d-flex mt-5 mb-5">
            <div class="border-top col py-3 pr-4 d-flex align-items-center justify-content-center">
                <img class="border border-dark" src="@Model.Image" alt="Item's Image"/>
            </div>
            <div class="border-top border-bottom col py-3">
                <h1>@Model.Name</h1><br/>
                <h5>Start price: @Model.StartPrice€</h5><br />
                <h5>Minimum price increment by: @ViewBag.Event.MinPriceIncrementAmount€</h5><br />
                <h5 id="CurrentPrice">Current price: @(ViewBag.Event.CurrentPrice)€</h5><span class="pl-4" id="updatedCurrentPrice" style="opacity: 0"><i class="fas fa-info-circle"></i></span><br />
                <span id="infoCurrentPrice" class="text-warning"></span>
                <h5>Amount: @Model.Amount @Model.MeasurementUnits</h5><br />
                <h5>Details: @Model.Details</h5>
            </div>
        </div>
        <div class="">
            <div class="my-3 bidraw"></div>
            <div class="mb-5">
                <div class="row row-cols-2 justify-content-around">
                    <div class="col col-sm-3">
                        <div class="input-group">
                            <input id="BidInput" type="number" class="form-control" placeholder="Type an amount"/>
                            <div class="input-group-append">
                                <span class="input-group-text">€</span>
                            </div>
                        </div>
                        <p class="text-muted small mt-1"><i class="fas fa-info-circle text-info"></i> You can only bid with an amount of <strong>the current price plus the added minimum.</strong></p>
                    </div>
                    <div class="col col-sm-3">
                        <p><span style="color: #FFCC00"><i class="fas fa-exclamation-triangle"></i></span> Once you withdraw you'll be <strong>removed as the last bidder</strong> and the last bidder will be the one with the highest bid after you.</p>
                    </div>
                </div>
                <div class="row row-cols-2 justify-content-around">
                    <div class="col col-sm-3">
                        <button id="bid" class="form-control btn btn-primary font-weight-bold">Bid</button>
                    </div>
                    <div class="col col-sm-3">
                        <button id="withdraw" class="form-control btn btn-warning font-weight-bold">Withdraw</button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!--Scripts-->
<script src="https://code.jquery.com/ui/1.12.1/jquery-ui.min.js" integrity="sha256-VazP97ZCwtekAsvgPBSUwPFKdrwD3unUfSGVYrahUqU=" crossorigin="anonymous"></script>
<script src="~/js/Bidder/Details/index.js"></script>
@model Item
@{
    ViewData["Title"] = "Details";
}
<link rel="stylesheet" href="~/css/Bidder/Details/index.css"/>
<div class="w-100 h-100" id="Details">
    <div class="aboveDetails d-flex py-5">
        <a asp-controller="Home" asp-action="Index" class="badge-pill text-decoration-none py-2">
            Back to admin page
        </a>
    </div>
    <div class="col d-flex mt-2">
        <div class="border-top col py-3 pr-4 d-flex align-items-center justify-content-center">
            <img class="border border-dark" src="@Model.Image" alt="Item's Image" />
        </div>
        <div class="border-top border-bottom col py-3">
            <h1>@Model.Name</h1>
            <h5>Start price: @Model.StartPrice€</h5>
            <h5>Minimum price increment by: @ViewBag.Event.MinPriceIncrementAmount€</h5>
            <h5>Current price: @ViewBag.Event.CurrentPrice</h5>
            <h5>Amount: @Model.Amount @Model.MeasurementUnits</h5>
            <h5>Details: @Model.Details</h5>
        </div>
    </div>
    <div class="col">
        <div class="my-3 bidraw"></div>
        <div class="d-flex">
            <div class="w-100">
                <form class="form-group w-100 h-100 border border-warning">
                    <div class="input-group border border-danger">
                        <input id="BidInput" type="number" class="form-control" placeholder="Type an amount" />
                        <div class="input-group-append">
                            <span class="input-group-text">€</span>
                        </div>
                    </div>
                    <button class="form-control btn btn-primary">Bid</button>
                </form>
            </div>
            <div class="w-100">
                <form class="form-group">
                    <button class="form-control btn btn-warning">Withdraw</button>
                </form>
            </div>
        </div>
    </div>
</div>

<!--Scripts-->
<script src="~/js/Bidder/Details/index.js"></script>